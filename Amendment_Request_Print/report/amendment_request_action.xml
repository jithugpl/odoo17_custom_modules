<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="cost_header">
        <!--        variable creation-->
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!--            multicompany-->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <!--        variable creation ends here-->
        <div class="header">

            <div class="row" style="report_header_style; border-bottom: 2px solid black;" >
                <div class="col-4 mt-2">
                    <img alt="img" t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                         style="max-height:90px;  mb-2"/>
                 <div>
                <h5>Amendment Request No:
                        <span t-esc="o.name"></span>
                </h5>
                 </div>


                </div>
                <div class="col-4"></div>
                <div class="col-4">
                   <h5><strong><span t-field="res_company.partner_id.name"/></strong></h5>
                    <h6><span t-field="res_company.partner_id.street"/></h6>
                    <h6><span t-field="res_company.partner_id.city"/></h6>
                    <h6><span t-field="res_company.partner_id.mobile"/></h6>
                    <h6><span t-field="res_company.partner_id.email"/></h6>
                </div>
            </div>

        </div>
        <div class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>
        <div class="footer o_standard_footer" style="margin-bottom:10px;">
            <div class="row" style="border-top: 2px">
                <div class="col-6">


                        <span>Printed Time: </span> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>

                    <h6>User:
                        <span t-esc="user.name"/>
                    </h6>
                </div>
                <div class="col-6">
                    <div class="pageno" >
                          <span t-esc="0" class="page " style="mt-3"/>
        /
        <span class="topage"/>
                    </div>

                </div>
            </div>

        </div>

    </template>
