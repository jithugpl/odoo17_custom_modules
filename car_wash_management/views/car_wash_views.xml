<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for tree & form view -->
    <record id="action_car_wash_type" model="ir.actions.act_window">
        <field name="name">Car Wash Types</field>
        <field name="res_model">car.wash.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
<!--    <menuitem id="menu_car_wash_root" name="Car Wash Management" sequence="10"/>-->

<!--   <menuitem id="menu_car_wash_main" name="Wash"-->
<!--          parent="menu_car_wash_root" sequence="1"/>-->
   <menuitem id="menu_car_wash_types" name="Wash Types"
          parent="menu_car_wash_main" action="action_car_wash_type" sequence="10"/>

    <!-- Tree View -->
    <record id="view_car_wash_type_tree" model="ir.ui.view">
        <field name="name">car.wash.type.tree</field>
        <field name="model">car.wash.type</field>
        <field name="arch" type="xml">
            <tree string="Car Wash Types">
                <field name="name"/>
                <field name="price"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_car_wash_type_form" model="ir.ui.view">
        <field name="name">car.wash.type.form</field>
        <field name="model">car.wash.type</field>
        <field name="arch" type="xml">
            <form string="Car Wash Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="duration"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
