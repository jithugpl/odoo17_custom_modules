<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_form_inherit_construction_material_management" model="ir.ui.view">
        <field name="name">account.move.form.inherit.construction.material.management</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="before">
                <field name="project_id" domain="[('partner_id', '!=', False)]" options="{'no_create': True}"
                       invisible="move_type not in ['in_invoice', 'in_refund', 'in_receipt']"/>
                <field name="purchase_picking_ids" widget="many2many_tags" invisible="1"/>
                <field name="picking_ids" widget="many2many_tags" domain="[('id', 'in', purchase_picking_ids)]"
                       options="{'no_create': True}" invisible="not purchase_picking_ids" readonly="state != 'draft'"/>
                <field name="receive_goods_reference" invisible="not purchase_picking_ids"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']" position="before">
                <field name="project_task_id" domain="[('project_id', '=', parent.project_id)]" optional="hide"
                       options="{'no_create': True}" column_invisible="not parent.project_id"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                <field name="project_task_id" column_invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>