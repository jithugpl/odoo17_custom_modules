<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="external_layout_standard_custom" inherit_id="web.external_layout_boxed">
        <xpath expr="//img[@t-att-src='image_data_uri(company.logo)']" position="before">
            <div class="red-bar mb-2">
            </div>
        </xpath>

        <xpath expr="//div[@class='o_boxed_header']" position="after">
            <h2 class="text-center mb-5 ">
                <strong>Quotation</strong>
            </h2>

        </xpath>
        <xpath expr="//div[@class='col-6 text-end mb4']" position="replace">
            <div class="col-6 text-start  mb4">
                <div class="mt0 h4 " style="color:red;" t-if="company.report_header" t-field="company.report_header">
                    Company tagline
                </div>
                <div name="company_address" class=" mb4">
                    <ul class="list-unstyled" name="company_address_list">
                        <li t-if="company.is_company_details_empty">
                            <span t-field="company.partner_id"
                                  t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'>
                                <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                    <strong>Company address block</strong>
                                    <div>Contains the company address.</div>
                                </div>
                            </span>
                        </li>
                        <li t-else="">
                            <span t-field="company.company_details">
                                <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                    <strong>Company details block</strong>
                                    <div>Contains the company details.</div>
                                </div>
                            </span>
                        </li>
                        <li t-if="not forced_vat"/>
                        <li t-else="">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                            <span t-esc="forced_vat">US12345671</span>
                        </li>
                    </ul>
                </div>
            </div>
        </xpath>

        <xpath expr="//div/div[hasclass('text-center')]" position="replace">
            <div>
                <div class="row mt-2">
                    <div class="col-6 ">
                        <div>
                            <p class="mb-1">
                                <strong>Bank Details</strong>
                            </p>
                            BANKNAME:
                            <span t-esc="o.company_id.bankname"></span>
                            <p class="mb-0">ACCOUNT NUMBER:
                                <span t-esc="o.company_id.bank_account_number"></span>
                            </p>
                            <!--                         Bank:-->
                            <p class="mb-0">BRANCH:
                                <span t-esc="o.company_id.branch"></span>
                            </p>
                            <p class="mb-0">IFSC:
                                <span t-esc="o.company_id.ifsc"></span>
                            </p>


                        </div>

                    </div>

                    <div class="col-6">
                        <p class="mt-3">Certified that the particular given above are true and correct.</p>
                        <p class="mt-0 mb-0">For
                            <strong>
                                <span t-field="doc.company_id"></span>
                            </strong>
                        </p>

                        <img src="/custom_sales_report/static/images/sign.jpg" alt="Signature"
                             style="width:150px; height:auto; margin-left:80px;" class="mt-0"/>

                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='o_boxed_header']" position="before">
            <style type="text/css">
                @import url('/custom_sales_report/static/src/css/style.css');
            </style>
        </xpath>
    </template>
</odoo>