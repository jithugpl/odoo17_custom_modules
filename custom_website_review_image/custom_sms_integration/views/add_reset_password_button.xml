<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_reset_password" inherit_id="auth_signup.reset_password">
        <xpath expr="//div[@t-if='message']" position="after">
            <div class="d-flex justify-content-center mb-3 mt-4">
                <div class="input-group" style="max-width: 400px; width: 100%;">
                    <input type="text" class="form-control" name="custom_input" placeholder="Enter your input here"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>


