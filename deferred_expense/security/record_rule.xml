<odoo>
    <data>
        <record model="ir.rule" id="record_deferred_expense_schedule_rule">
            <field name="name">record_deferred_expense_schedule_group</field>
            <field name="model_id" ref="deferred_expense.model_deferred_expense_schedule"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id','in',company_ids)]</field>
        </record>

        <record model="ir.rule" id="record_deferred_expense_filter_rule">
            <field name="name">record_deferred_expense_filter_group</field>
            <field name="model_id" ref="deferred_expense.model_deferred_expense_filter"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id','in',company_ids)]</field>
        </record>
    </data>
</odoo>
