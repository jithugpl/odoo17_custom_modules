<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_deferred_expense_filter_tree" model="ir.ui.view">
        <field name="name">Monthly expense</field>
        <field name="model">deferred.expense.filter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="accounting_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge" decoration-bf="state == 'draft'" decoration-success="state == 'post'"
                       decoration-danger="state =='Cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_deferred_expense_filter_form" model="ir.ui.view">
        <field name="name">deferred.expense.filter.form</field>
        <field name="model">deferred.expense.filter</field>
        <field name="arch" type="xml">
            <form string="Deferred Expense Filter">
                <header>
                    <button string="Generate" type="object" name="action_apply_filter" class="btn-primary"
                            invisible="state in ['cancel','post']" groups="deferred_expense.group_deferred_manager"/>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-primary"
                            invisible="state in ['cancel','post']" groups="deferred_expense.group_deferred_manager"/>
                    <button string="Reset to Draft" name="action_reset_to_draft" class="btn-primary" type="object"
                            invisible="state in ['draft','cancel']" groups="deferred_expense.group_deferred_manager"/>
                    <button string="Post" type="object" name="action_post" class="btn-primary"
                            invisible="state == 'post' or state=='cancel' or is_generated == False"
                            groups="deferred_expense.group_deferred_manager"/>
                    <field name="state" widget="statusbar" nolabel="1"
                           statusbar_visible="draft,post"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_journal_entries" type="object" string="View Journal Entries"
                                class="btn-primary" icon="fa-exchange" invisible="state!='post'"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="start_date" readonly="state in ['cancel','post']"/>
                            <field name="journal_id"  string='Journal' domain="[('deferred_expense','=','True')]"   options="{'no_create': True, 'no_open': True}" readonly="state in ['cancel','post']"/>
                        </group>
                        <group>
                            <field name="end_date" readonly="state in ['cancel','post']"/>
                            <field name="accounting_date" readonly="state in ['cancel','post']"/>
                            <field name="is_generated" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Monthly Expenses">
                            <field name="monthly_expense_ids" readonly="1">
                                <tree string="Deferred Expenses">
                                    <field name="reference" string="Reference"/>
                                    <field name="debit_account"/>
                                    <field name="debit_amount"/>
                                    <field name="credit_account"/>
                                    <field name="credit_amount"/>
                                    <field name="journal_entry"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="monthly_expense_action" model="ir.actions.act_window">
        <field name="name">Monthly Expense</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">deferred.expense.filter</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                create your first monthly expense report
            </p>
        </field>
    </record>

    <menuitem id="monthly_expense_sub_menu_accounting"
              name="Monthly Expense"
              parent="account.menu_finance_entries"
              action="monthly_expense_action"
              sequence="15"/>
</odoo>
