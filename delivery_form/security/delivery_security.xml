<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_delivery_note">
        <field name="name">Delivery Form Permission</field>
        <field name="description">Category for Delivery Form privilege</field>

    </record>

    <record id="group_delivery_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_delivery_note"/>

    </record>

    <record id="group_delivery_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_delivery_note"/>
        <field name="implied_ids" eval="[(4, ref('group_delivery_user'))]"/>

    </record>

    <record id="delivery_form_company_rule" model="ir.rule">
        <field name="name">Delivery Form Multi-Company</field>
        <field name="model_id" ref="model_delivery_form"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>


