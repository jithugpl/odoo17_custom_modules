<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit_style_code" model="ir.ui.view">
        <field name="name">product.template.form.inherit.style.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Make the existing barcode field read-only -->
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <!-- Insert the new field 'style_code' after the barcode field as read-only -->
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="style_code" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
