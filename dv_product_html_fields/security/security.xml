<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_fields">
        <field name="name">Datavalley Ecommerce Fields</field>
        <field name="description">Category for Ecommerce product fields privilege</field>

    </record>

    <record id="group_field_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_fields"/>

    </record>

    <record id="group_field_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_fields"/>
        <field name="implied_ids" eval="[(4, ref('group_field_user'))]"/>

    </record>

    <record id="product_size_company_rule" model="ir.rule">
        <field name="name">Product Size Multi-Company Rule</field>
        <field name="model_id" ref="model_care_guide"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="product_material_company_rule" model="ir.rule">
        <field name="name">Product Material Multi-Company Rule</field>
        <field name="model_id" ref="model_product_material"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="product_colour_company_rule" model="ir.rule">
        <field name="name">Product Colour Multi-Company Rule</field>
        <field name="model_id" ref="model_items_included"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>