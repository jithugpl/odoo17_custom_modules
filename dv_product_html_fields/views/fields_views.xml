<odoo>

    <record id="view_product_template_form_inherit_datavalley" model="ir.ui.view">
    <field name="name">product.template.form.inherit.datavalley</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
        <!-- Add a new page named "Datavalley" -->
        <notebook position="inside">
            <page name="datavalley" string="eCommerce">
                <group>
                    <field name="description_ecommerce"/>
                        <field name="material_id"/>
                        <field name="care_guide_id"/>
                        <field name="items_included_id"/>
                        <field name="product_note_id"/>
                       <field name="is_published"/>


                </group>
            </page>
        </notebook>
    </field>
</record>

</odoo>
