<odoo>
    <record id="view_task_type_form" model="ir.ui.view">
        <field name="name">task.type.form</field>
        <field name="model">task.type</field>
        <field name="arch" type="xml">
            <form string="Task Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
                 <!-- Chatter area -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_task_type_tree" model="ir.ui.view">
        <field name="name">task.type.tree</field>
        <field name="model">task.type</field>
        <field name="arch" type="xml">
            <tree string="Task Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_task_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">task.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_task_management_root"
              name="Task Management"/>
    <menuitem id="menu_task_type" name="Task Types"
              parent="menu_task_management_root"
              action="action_task_type"/>
</odoo>
