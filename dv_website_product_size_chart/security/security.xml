<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_size_chart">
        <field name="name">Datavalley Ecommerce Product Size Chart</field>
        <field name="description">Category for Ecommerce Size Chart privilege</field>

    </record>

    <record id="group_size_chart_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_size_chart"/>

    </record>

    <record id="group_size_chart_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_size_chart"/>
        <field name="implied_ids" eval="[(4, ref('group_size_chart_user'))]"/>

    </record>

    <record id="product_size_chart_company_rule" model="ir.rule">
        <field name="name">Product Size Chart Multi-Company Rule</field>
        <field name="model_id" ref="model_website_product_size_chart"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>


</odoo>