<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_cleaning_form">
        <field name="name">Cleaning Form Permission</field>
        <field name="description">Category for Cleaning Form privilege</field>

    </record>

    <record id="group_cleaning_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_cleaning_form"/>

    </record>

    <record id="group_cleaning_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_cleaning_form"/>
        <field name="implied_ids" eval="[(4, ref('group_cleaning_user'))]"/>

    </record>

    <record id="cleaning_form_company_rule" model="ir.rule">
        <field name="name">Cleaning Form Multi-Company</field>
        <field name="model_id" ref="model_cleaning_form"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

</odoo>


