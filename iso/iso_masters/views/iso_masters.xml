<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--iso_masters/views/iso_masters.xml:3-->
    <!-- Tree View for IsoMasterShift -->
    <record id="view_iso_master_shift_tree" model="ir.ui.view">
        <field name="name">Iso Master Shift Tree</field>
        <field name="model">iso.masters.shift</field>
        <field name="arch" type="xml">
            <tree string="Shift Master" editable="bottom">
                <field name="shift_name"/>
            </tree>
        </field>
    </record>

    <!-- Tree View for IsoMasterMeter -->
    <record id="view_iso_master_meter_tree" model="ir.ui.view">
        <field name="name">Iso Master Meter Tree</field>
        <field name="model">iso.masters.meter</field>
        <field name="arch" type="xml">
            <tree string="Meter Master" editable="bottom">
                <field name="power_meter_name"/>
            </tree>
        </field>
    </record>

    <!-- Action for IsoMasterShift -->
    <record id="power_factor_master_action" model="ir.actions.act_window">
        <field name="name">Shift Names</field>
        <field name="res_model">iso.masters.shift</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_iso_master_shift_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New  Shift Name!
            </p>
        </field>
    </record>

    <!-- Action for IsoMasterMeter -->
    <record id="action_iso_master_meter" model="ir.actions.act_window">
        <field name="name">Iso Master Meter</field>
        <field name="res_model">iso.masters.meter</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_iso_master_meter_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Meter Name!
            </p>
        </field>
    </record>


</odoo>

