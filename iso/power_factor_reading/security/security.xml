<!-- Category for the Power Factor module -->
    <record model="ir.module.category" id="module_category_power_factor">
        <field name="name">Power Factor Reading</field>
        <field name="sequence">10</field>
    </record>

    <!-- Employee Group -->
    <record id="group_power_factor_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="module_category_power_factor"/>
        <field name="comment">Group for employees managing power factor records.</field>
    </record>

    <!-- Manager Group -->
    <record id="group_power_factor_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_power_factor"/>
        <field name="implied_ids" eval="[(4, ref('group_power_factor_employee'))]"/>
        <field name="comment">Group for managers overseeing power factor records.</field>
    </record>



    <record id="rule_power_factor_record_company" model="ir.rule">
        <field name="name">Power Factor Record Company Rule</field>
        <field name="model_id" ref="model_power_factor_record"/>
        <field name="domain_force">

             ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
<!--        <field name="groups" eval="[(4, ref('group_power_factor_employee'))]"/> &lt;!&ndash; Optional: restrict to a specific group &ndash;&gt;-->
    </record>

</odoo>


