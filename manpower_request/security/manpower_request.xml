<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_manpower_request">
        <field name="name">ManPower Request Permission</field>
        <field name="description">Category for Manpower request privilege</field>
    </record>


    <record id="group_manpower_user" model="res.groups">
        <field name="name">Hr User</field>
        <field name="category_id" ref="module_category_manpower_request"/>
    </record>

    <record id="group_manpower_manager" model="res.groups">
        <field name="name">Hr Manager</field>
        <field name="category_id" ref="module_category_manpower_request"/>
        <field name="implied_ids" eval="[(4, ref('group_manpower_user'))]"/>
    </record>

    <record id="group_manpower_admin" model="res.groups">
        <field name="name">Hr Administrator</field>
        <field name="category_id" ref="module_category_manpower_request"/>
        <field name="implied_ids" eval="[(4, ref('group_manpower_manager'))]"/>
    </record>

</odoo>