<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="material_request_header">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <!--        variable creation ends here-->
        <div class="header">
            <div class="row" style="report_header_style; mb-1:">
<!--            <div class="row" style="report_header_style; border-left: 2px solid black; mb-1">-->
                <div class="col-4 mt-2">
                    <img alt="img" t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                         style="max-height:90px;  mb-2"/>
                    <h6>Material Request No:
                        <span t-esc="o.name"></span>
                    </h6>
                </div>
                <div class="col-4" ></div>
                <div class="col-4" style="margin-bottom:25px;text-align:right;">
                    <h5 style="color:red;">
                        <strong>
                            <span t-field="res_company.partner_id.name"/>
                        </strong>
                    </h5>

                        <span t-field="res_company.partner_id.street"/><br></br>


                        <span t-field="res_company.partner_id.city"/><br></br>


<!--                        <span t-field="res_company.partner_id.country_id.name"/><br></br> &lt;!&ndash; Country Name &ndash;&gt;-->


                        <span t-field="res_company.partner_id.mobile"/><br></br>

                        <span t-field="res_company.partner_id.email"/>


                </div>
            </div>
        </div>


        <div class="article o_report_layout_standard" style="margin-top:120px;">
            <!--            <t t-out="0"/>-->
            <div class="new">

            </div>

            <div class="page" style="margin-top:50px">

                <div class="content">

                    <style>

                        h1 {
                        margin-top: 10px;
                        }
                        table.table-bordered {
                        border: 1px solid black;
                        }
                        table.table-bordered th, table.table-bordered td {
                        border: 1px solid black;font-size:20px
                        }
                        .ashcolor{ background-color:#B2BEB5;}


                    </style>

                    <h1 class="text-center ">
                        <strong style="color:red">Material Request</strong>
                    </h1>
                    <div>
                        <table style="width: 100%;text-align:center">
                            <tr>
                                <td style="width: 50%;">
                                    <h5>Material request no:
                                        <span t-esc="o.name"/>
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 50%;">
                                    <h5>Date:
                                        <span t-esc="o.date.strftime('%d/%m/%y')"/>
                                    </h5>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 50%;">
                                    <h5>Task:
                                        <span t-esc="o.task_id.name"/>
                                    </h5>
                                </td>
                            </tr>
                        </table>

                    </div>
                    <div class="tablenew mt-5" style="margin-top:25px">
                        <table class="table table-sm o_main_table table-bordered "
                               name="material_request_table">
                            <thead>
                                <tr class="ashcolor">
                                    <th name="product_name" class="text-start">
                                        <span>Product Name</span>
                                    </th>

                                    <th name="unit_of_measurement"
                                        style="text-align:center;">
                                        <span>UOM</span>
                                    </th>
                                    <th name="quantity"  style="text-align:center;">
                                        <span>Quantity</span>
                                    </th>

                                </tr>
                            </thead>
                            <tbody class="material_request">
                                <t t-foreach="o.material_request_line_ids" t-as="line">
                                    <tr>
                                        <td name="material_req_line">
                                            <span t-esc="line.product_id.name"/>
                                        </td>
                                        <td name="uom" style="text-align:center">
                                            <span t-esc="line.uom_id.name"/>
                                        </td>
                                        <td name="material_qty" style="text-align:center">
                                            <span t-esc="line.quantity"/>
                                        </td>
                                        <!-- Add more columns for additional product details -->

                                        <!-- Add more columns as needed -->
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align:left">
                                        <strong>Total:</strong>
                                    </td>
                                    <td style="text-align:center;">
                                        <t t-set="total_quantity" t-value="0"/>
                                        <t t-foreach="o.material_request_line_ids" t-as="line">
                                            <t t-set="total_quantity" t-value="total_quantity + line.quantity"/>
                                        </t>
                                        <span t-esc="total_quantity"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>


        <div class="footer o_standard_footer" style="margin-bottom:10px;">
            <div class="row" style="border-top: 2px solid red;">
                <div class="col-6">


                    <span>Printed Time:</span>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>

                    <h6>User:
                        <span t-esc="user.name"/>
                    </h6>
                    <h6>Approved by:
                        <span t-esc="user.name"/>
                    </h6>
                </div>
                <div class="col-6">
                    <div class="pageno">
                        <span t-esc="0" class="page " style="mt-3"/>
                        /
                        <span class="topage"/>
                    </div>

                </div>
            </div>

        </div>

    </template>


    <template id="report_material_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="material_request_print.material_request_header">


                </t>
            </t>
        </t>
    </template>
</odoo>