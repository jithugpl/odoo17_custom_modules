    <!--form view-->
    <record id="view_new_form" model="ir.ui.view">
        <field name="name">new.form</field>
        <field name="model">new.form</field>
        <field name="arch" type="xml">
            <form>


                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="form_no" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_no"/>
                        </group>

                    </group>


                </sheet>

            </form>
        </field>
