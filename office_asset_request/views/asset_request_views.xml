<odoo>
    <record id="view_asset_request_form" model="ir.ui.view">
        <field name="name">office.asset.request.form</field>
        <field name="model">office.asset.request</field>
        <field name="arch" type="xml">
            <form string="Asset Request">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn btn-primary" invisible="state in ['submitted','approved','rejected']"
                            groups="office_asset_request.group_asset_request_user"/>
                    <button name="action_approve" string="Approve" type="object" class="btn btn-primary" invisible="state in ['draft','approved']"
                            groups="office_asset_request.group_asset_request_manager"/>
                    <button name="action_reject" string="Reject" type="object" class="btn btn-primary" invisible="state in ['draft','rejected']"
                            groups="office_asset_request.group_asset_request_manager"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn btn-primary" invisible="state in ['draft','approved','rejected']"
                             groups="office_asset_request.group_asset_request_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                </header>
                <sheet>
                    <group>
<!--                        <field name="name" readonly="1"/>-->
                        <field name="employee_id"/>
                        <field name="request_date"/>
                        <field name="asset_name"/>
                        <field name="quantity"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_asset_request_tree" model="ir.ui.view">
        <field name="name">office.asset.request.tree</field>
        <field name="model">office.asset.request</field>
        <field name="arch" type="xml">
            <tree string="Asset Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="asset_name"/>
                <field name="quantity"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


</odoo>
