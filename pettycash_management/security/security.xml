<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_petty_cash_privilege">
        <field name="name">Petty Cash</field>
        <field name="description">Category for petty cash management</field>
        <field name="sequence">45</field>
    </record>
    <record id="group_petty_cash_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_petty_cash_privilege"/>
    </record>
    <record id="group_petty_cash_reviewer" model="res.groups">
        <field name="name">Reviewer</field>
        <field name="category_id" ref="module_category_petty_cash_privilege"/>
        <field name="implied_ids" eval="[(4,ref('group_petty_cash_user'))]"/>

    </record>
    <record id="group_petty_cash_verifier" model="res.groups">
        <field name="name">Verifier</field>
        <field name="category_id" ref="module_category_petty_cash_privilege"/>
        <field name="implied_ids" eval="[(4,ref('group_petty_cash_reviewer'))]"/>
    </record>

    <record id="group_petty_cash_accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="module_category_petty_cash_privilege"/>
        <field name="implied_ids" eval="[(4,ref('group_petty_cash_verifier'))]"/>
    </record>

    <record model="ir.rule" id="petty_cash_project_follower_rule">
        <field name="name">Petty Cash:projects follower-only</field>
        <field name="model_id" ref="model_petty_cash_management"/>
        <field name="domain_force">[('project.message_partner_ids','in',[user.partner_id.id])]</field>
        <field name="groups"
               eval="[(4,ref('group_petty_cash_user')),(4,ref('group_petty_cash_reviewer')),(4,ref('group_petty_cash_verifier')),(4,ref('group_petty_cash_accountant'))]"/>
    </record>
</odoo>