<?xml version="1.0" ?>
<odoo>
    <record id="product_template_only_form_inherit_internal_ref" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.internal.ref</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="automatic_ref_activated" invisible="1"/>
            </field>
            <field name="default_code" position="attributes">
                <attribute name="readonly">automatic_ref_activated</attribute>
            </field>
            <!-- Update the barcode field: set it as read-only and force its value to be saved -->
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <!-- Insert the new style_code field after the barcode field, also as read-only with force_save -->
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="style_code" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>