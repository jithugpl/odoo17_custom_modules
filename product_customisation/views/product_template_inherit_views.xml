<odoo>
    <record id="action_open_customisation_form" model="ir.actions.act_window">
        <field name="name">Customise Product</field>
        <field name="res_model">product.customisation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_product_id': active_id}</field>
    </record>

    <record id="product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
         <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insert button before the detailed_type field -->
            <xpath expr="//field[@name='detailed_type']" position="before">
                <button string="Customise"
                        type="action"
                        name="%(action_open_customisation_form)d"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
