<record id="view_product_form_inherit_pos_last_orders" model="ir.ui.view">
    <field name="name">product.template.pos.last.orders</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Last 5 POS Orders">
                <field name="pos_last_orders" readonly="1">
                    <tree>
                        <field name="name"/>
                        <field name="date_order"/>
                        <field name="amount_total"/>
                        <field name="partner_id"/>
                    </tree>
                </field>
            </page>
        </notebook>
    </field>
</record>
