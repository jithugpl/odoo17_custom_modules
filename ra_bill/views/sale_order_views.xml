<?xml version="1.0"?>
<odoo>

    <record id="view_sale_order_inherit_ra_bill_form" model="ir.ui.view">
        <field name="name">view.sale.order.inherit.ra.bill.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="order_type" readonly="state in ['cancel', 'sale']"/>
            </xpath>
        </field>
    </record>

</odoo>
