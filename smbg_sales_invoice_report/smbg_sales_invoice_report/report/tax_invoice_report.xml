<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data>
        <record id="paperformat_euro_tax_invoice_report" model="report.paperformat">
            <field name="name">Tax Invoice A4 Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="dpi">130</field>
        </record>

        <record id="smbg_tax_invoice_action_report" model="ir.actions.report">
            <field name="name">Tax Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">smbg_sales_invoice_report.smbg_tax_invoice_action_report_template</field>
            <field name="report_file">smbg_sales_invoice_report.smbg_tax_invoice_action_report_template</field>
            <field name="paperformat_id" ref="smbg_sales_invoice_report.paperformat_euro_tax_invoice_report"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
            <field name="binding_type">report</field>
        </record>
    </data>

</odoo>