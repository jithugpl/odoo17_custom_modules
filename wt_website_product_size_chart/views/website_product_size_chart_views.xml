<odoo>
  <data>
    <record id="website_product_size_charts_tree_view" model="ir.ui.view">
      <field name="name">website.product.size.chart.tree</field>
      <field name="model">website.product.size.chart</field>
      <field name="arch" type="xml">
        <tree string="Product Size Chart">
          <field name="name"/>

          <field name="is_active" widget="boolean_toggle"/>
        </tree>
      </field>
    </record>
    <record id="website_product_size_chart_form_view" model="ir.ui.view">
      <field name="name">website.product.size.chart.form</field>
      <field name="model">website.product.size.chart</field>
      <field name="arch" type="xml">
        <form string="Product Size Chart">
          <sheet>
            <div class="oe_title">
              <label class="oe_edit_only" for="name" string="Template Name"/>
              <h1>
                <field name="name" placeholder="Name"/>
              </h1>
            </div>
            <group>
              <field name="is_active" widget="boolean_toggle"/>
            </group>
            <notebook>
              <page string="Design" name="design">
                <group string="Link">
                  <field name="link_text"/>
                </group>
                <group string="Size Chart">
                  <field name="template"/>
                </group>
                <group string="How To Measure">
                  <field name="how_to_measure"/>
                </group>
              </page>
              <page string="Applicable On" name="applicable_on">
                <group string="Product">
                  <field name="product_ids" widget="many2many_tags"/>
                </group>
                <group string="Product Category">
                  <field name="category_ids" widget="many2many_tags"/>
                </group>
                <group string="Product Tag">
                  <field name="product_tag_ids" widget="many2many_tags"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_website_product_size_chart" model="ir.actions.act_window">
      <field name="name">Product Size Chart</field>
      <field name="res_model">website.product.size.chart</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_website_product_size_chart" name="Product Size Chart" sequence="120" action="action_website_product_size_chart" parent="website_sale.menu_catalog" groups="sales_team.group_sale_salesman"/>
  </data>
</odoo>
  